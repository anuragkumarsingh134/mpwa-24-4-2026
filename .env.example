# --- App Settings ---
APP_NAME=MPWA
APP_ENV=production
APP_KEY=                          # Auto-generated by install wizard
APP_DEBUG=false                   # Set to true only for debugging
APP_URL=http://localhost:8000     # Set by install wizard (your domain or IP)
APP_INSTALLED=false               # Set to false to trigger install wizard

# --- License ---
LICENSE_KEY=
BUYER_EMAIL=

# --- Server Configuration ---
TYPE_SERVER=localhost              # Options: localhost, hosting, other
WA_URL_SERVER=http://localhost:3100  # Node.js WhatsApp server URL
PORT_NODE=3100                    # Node.js server port

# --- Database ---
DB_CONNECTION=mysql
DB_HOST=localhost
DB_PORT=3306
DB_DATABASE=mpwa                  # Your MySQL database name
DB_USERNAME=mpwa_user             # Your MySQL username
DB_PASSWORD=                      # Your MySQL password

# --- Logging ---
LOG_CHANNEL=stack
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

# --- Cache & Session ---
BROADCAST_DRIVER=log
CACHE_DRIVER=file
FILESYSTEM_DRIVER=local
QUEUE_CONNECTION=sync
SESSION_DRIVER=file
SESSION_LIFETIME=120

# --- Redis (optional) ---
